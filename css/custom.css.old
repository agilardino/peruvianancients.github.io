
@import url(https://fonts.googleapis.com/css?family=Droid+Sans:400,700);
@import url(menu.css);
@import url(banner.css);
@import url(productos.css);
@import url(info.css);
@import url(quienes.css);
@import url(main_productos.css);

* {
    margin: 0 auto;
    padding: 0;
    box-sizing: border-box;
}

body{
    font-family: 'Droid Sans', sans-serif;
}

header {
    width: 100%;
    height: 50px;
   /* background: #aaa463;*/
    background: rgba(38,60,60,1);
    color: #fff;
   
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    
    
}
.container {
    width: 98%;
    margin: auto;
}
.logo {
    float: left;
    margin: 0;
    padding: 1px;
    
}
h1{
    float: left;
    padding: 10px;
    }

header .container {
    display: table;
}
header .container h1{
    font-size: 21px;
}

section {
   width: 100%;
    margin-bottom: 25px;
}

#bienvenidos {
    text-align: center;
}


footer .container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding-bottom: 25px;
}

.copy {
    font-size: 20px;
}
.sociales {
    width: 100%;
    text-align: center;
    font-size: 20px;
}

.sociales a {
    color: #333;
    text-decoration: none;
}



@media (min-width:1024px){
    
    .container {
        width: 960px;
    }
    
}

@media (min-width:768px){
    
    .sociales {
        width: auto;
    }
    
    footer .container {
        justify-content: space-between;
    }
    
}